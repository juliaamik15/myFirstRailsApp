<div id="contact" >
	<h1>Contact me</h1>
	<p>Please feel free to contact me by email if you have any questions: juliaamik15@gmail.com.</p>
<div class="container">
	<%= flash[:notice] %>

	<%= form_tag("/static_pages/thank_you") do %>
	
	<div class="row">
	  <div class="col-md-4">
	    <div class="form-group">
	      <%= label_tag :name %>
	      <%= text_field_tag :name, nil, class: "form-control", placeholder: "Enter Name" %>
	    </div>      
	    <div class="form-group">
	      <%= label_tag :email, "Email Address" %>
	      <%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter Email" %>
	    </div>
	    <div class="form-group">
	      <%= label_tag :message %>
	      <%= text_area_tag :message, nil, class: "form-control", placeholder: "Enter Message" %>
	    </div>      
	  </div>
	</div>

	<%= submit_tag "Send", class: "btn btn-success" %>   
	<% end %>
	</div>

</div>
